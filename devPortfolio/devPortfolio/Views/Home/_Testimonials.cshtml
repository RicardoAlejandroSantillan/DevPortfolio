<div class="testimonials-content">
    <h2 class="section-title">Testimonials</h2>

    <div class="testimonials-filter">
        <button class="filter-button active" data-section="add">Add Testimonial</button>
        <button class="filter-button" data-section="view">View Testimonials</button>
    </div>

    <div class="testimonials-sections">
        <section class="testimonial-section active" id="add-testimonial">
            <form id="testimonialForm" class="testimonial-form">
                <div class="form-group">
                    <label for="email">Email:</label>
                    <input type="email" id="email" required class="form-input">
                </div>

                <div class="form-group">
                    <label for="name">Name/Alias:</label>
                    <input type="text" id="name" required class="form-input">
                </div>

                <div class="form-group">
                    <label for="company">Company:</label>
                    <input type="text" id="company" required class="form-input">
                </div>

                <div>
                    <label>Rating:</label>
                </div>
                <div class="form-group rating-group justify-content-center">
                    <div class="star-rating">
                        <input type="radio" id="star5" name="rating" value="5" required>
                        <label for="star5">★</label>
                        <input type="radio" id="star4" name="rating" value="4">
                        <label for="star4">★</label>
                        <input type="radio" id="star3" name="rating" value="3">
                        <label for="star3">★</label>
                        <input type="radio" id="star2" name="rating" value="2">
                        <label for="star2">★</label>
                        <input type="radio" id="star1" name="rating" value="1">
                        <label for="star1">★</label>
                    </div>
                </div>

                <div class="form-group">
                    <label for="description">Description:</label>
                    <textarea id="description" required class="form-input" rows="4"></textarea>
                </div>

                <button type="submit" class="submit-button">Submit Testimonial</button>
            </form>
        </section>

        <div class="success-message">Testimonial submitted successfully!</div>

        <section class="testimonial-section" id="view-testimonials">
            <div class="testimonials-container">
                <!-- testimonios dinamicos -->
            </div>
        </section>
    </div>
</div>